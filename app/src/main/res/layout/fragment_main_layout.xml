<?xml version="1.0" encoding="utf-8"?>
<net.gy.SwiftFrameWork.UI.view.recyclerview.MyNestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.shuashua.buss.View.Widgets.Banner.ImageCycleView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/main_cycle_view" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">
                    <TabHost
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/pass_rate"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/radio"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="供应商推荐"
                            android:textColor="@color/gray" />
                    </TabHost>
                    <TabHost
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/cut_rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/paihang"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="店铺账单"
                            android:textColor="@color/gray" />
                    </TabHost>
                    <TabHost
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/lowvol_rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/birthday"
                            android:gravity="center"
                            android:paddingTop="4dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:text="店铺广告"
                            android:textColor="@color/gray" />
                    </TabHost>
                </TableRow>
            </TableLayout>
            <View
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="#66E0DFE0" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/paihang"
                    android:layout_gravity="start"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tipcover1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:text="会员卡列表"
                    android:clickable="true"
                    android:layout_toRightOf="@+id/tipcover1" />
                <TextView
                    android:id="@+id/morebt1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:layout_alignParentRight="true"
                    android:text="点击查看更多>>   " />
            </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mainfrag_cards">

                </android.support.v7.widget.RecyclerView>

        </LinearLayout>


</net.gy.SwiftFrameWork.UI.view.recyclerview.MyNestedScrollView>
